<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form", id: "validation_form"}) do |f| %>

      <div class="form-group">
          <%= f.email_field :email, class: "form-control mr-sm-2",placeholder: "Correo" %>
      </div>

      <div class="form-group">
          <%= f.password_field :password, class: "form-control mr-sm-2", placeholder: "Password", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <div align="center">
          <%= f.submit "Iniciar Sesion", class: "btn btn-primary btn-lg" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
