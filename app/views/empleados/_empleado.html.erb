<% obj.each do |empleado| %>
<tr>
  <td><%= empleado.nombre %></td>
  <td><%= empleado.rfc %></td>
  <td><%= empleado.puesto %></td>
  <td align="right">
      <%= link_to "Editar", edit_empleado_path(empleado), class: "btn btn-info btn-sm" %>
      <%= link_to "Eliminar", empleado_path(empleado), class: "btn btn-danger btn-sm", data: {:confirm => 'Estas seguro?'}, :method => :delete %>
  </td>
</tr>
<% end %>
